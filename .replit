modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "orion-dashboard"

[[workflows.workflow]]
name = "orion-dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_dashboard.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "vm"
run = ["python", "web_dashboard.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41559
externalPort = 3000
